---
import BaseLayout from './BaseLayout.astro';
import CopyButton from '../components/CopyButton.astro';
import TableOfContents from '../components/TableOfContents.astro';
import '../styles/markdown.css';
import { getLangFromUrl, useTranslations, type Lang } from '../i18n';

interface Props {
  title: string;
  date: Date;
  description?: string;
  tags?: string[];
  readingTime?: number;
  lang?: Lang;
}

const { title, date, description, tags = [], readingTime } = Astro.props;
const lang = Astro.props.lang || getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const formattedDate = date.toLocaleDateString(lang === 'zh' ? 'zh-CN' : 'en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={title} description={description} lang={lang}>
  <article class="container post-page">
    <header class="post-header">
      <div class="post-meta">
        <time datetime={date.toISOString()}>{formattedDate}</time>
        {readingTime && <span>Â· {readingTime} {t('post.min')}</span>}
      </div>
      <h1 class="post-title">{title}</h1>
      {description && <p class="post-desc">{description}</p>}
      {tags.length > 0 && (
        <div class="post-tags">
          {tags.map(tag => (
            <span class="tag">#{tag}</span>
          ))}
        </div>
      )}
    </header>
    <div class="prose">
      <slot />
    </div>
    <CopyButton />
    <TableOfContents />
  </article>
</BaseLayout>

<style>
  .post-page {
    padding: var(--space-3xl) 0 var(--space-4xl);
    max-width: 720px;
  }

  .post-header {
    margin-bottom: var(--space-3xl);
    padding-bottom: var(--space-xl);
    border-bottom: 1px solid var(--border);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--text-sm);
    color: var(--text-muted);
    font-family: var(--font-mono);
    margin-bottom: var(--space-md);
  }

  .post-title {
    font-size: var(--text-4xl);
    font-weight: 700;
    letter-spacing: -0.02em;
    line-height: 1.2;
    margin-bottom: var(--space-md);
  }

  .post-desc {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-md);
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .tag {
    font-size: var(--text-xs);
    font-family: var(--font-mono);
    color: var(--text-muted);
    padding: 2px 8px;
    background: var(--bg-tertiary);
    border-radius: var(--radius-full);
  }

  @media (max-width: 768px) {
    .post-title {
      font-size: var(--text-3xl);
    }
  }
</style>
