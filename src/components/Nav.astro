---
import { useTranslations, getLocalizedPath, languages, type Lang } from '../i18n';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const currentPath = Astro.url.pathname;
---

<nav>
  <div class="nav-inner container">
    <a href={getLocalizedPath('/', lang)} class="logo">
      <span class="logo-text">ANEXUS</span>
      <span class="logo-dot">.</span>
    </a>

    <div class="nav-links">
      <a href={getLocalizedPath('/projects', lang)} class="nav-link">{t('nav.projects')}</a>
      <a href={getLocalizedPath('/blog', lang)} class="nav-link">{t('nav.blog')}</a>
      <a href={getLocalizedPath('/about', lang)} class="nav-link">{t('nav.about')}</a>

      <button class="nav-search-btn" aria-label="Search">
        <svg width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>
        <span class="search-shortcut">âŒ˜K</span>
      </button>

      <div class="lang-switch">
        {Object.entries(languages).map(([code, label]) => (
          <a
            href={code === 'zh' ? currentPath.replace(/^\/en/, '') || '/' : `/en${currentPath}`}
            class:list={['lang-btn', { active: code === lang }]}
          >
            {code.toUpperCase()}
          </a>
        ))}
      </div>
    </div>

    <button class="mobile-toggle" aria-label="Menu" id="mobile-toggle">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</nav>

<style>
  nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: var(--nav-height);
    z-index: 100;
    background: var(--bg-glass);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border);
    transition: background var(--duration-normal) var(--ease-out);
  }

  .nav-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
  }

  .logo {
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--text-primary);
    letter-spacing: -0.02em;
    text-decoration: none;
  }

  .logo:hover {
    color: var(--text-primary);
  }

  .logo-dot {
    background: var(--gradient-text);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: var(--space-xl);
  }

  .nav-link {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--text-secondary);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out);
    position: relative;
  }

  .nav-link:hover {
    color: var(--text-primary);
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--gradient);
    border-radius: 1px;
    transition: width var(--duration-normal) var(--ease-out);
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .lang-switch {
    display: flex;
    gap: 2px;
    background: var(--bg-tertiary);
    border-radius: var(--radius-sm);
    padding: 2px;
    margin-left: var(--space-md);
  }

  .lang-btn {
    font-size: var(--text-xs);
    font-weight: 600;
    padding: 4px 8px;
    border-radius: 4px;
    color: var(--text-muted);
    text-decoration: none;
    transition: all var(--duration-fast) var(--ease-out);
  }

  .lang-btn:hover {
    color: var(--text-secondary);
  }

  .lang-btn.active {
    background: var(--bg-secondary);
    color: var(--text-primary);
    box-shadow: var(--shadow-sm);
  }

  .nav-search-btn {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 5px 10px;
    background: var(--bg-tertiary);
    border: 1px solid var(--border);
    border-radius: var(--radius-sm);
    color: var(--text-muted);
    cursor: pointer;
    font-size: var(--text-xs);
    transition: all var(--duration-fast) var(--ease-out);
  }

  .nav-search-btn:hover {
    color: var(--text-primary);
    border-color: var(--border-hover);
  }

  .search-shortcut {
    font-family: var(--font-mono);
    font-size: 10px;
    padding: 1px 4px;
    background: var(--bg-secondary);
    border-radius: 3px;
  }

  .mobile-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 4px;
  }

  .mobile-toggle span {
    width: 20px;
    height: 2px;
    background: var(--text-secondary);
    border-radius: 1px;
    transition: all var(--duration-fast) var(--ease-out);
  }

  @media (max-width: 768px) {
    .nav-links {
      display: none;
      position: absolute;
      top: var(--nav-height);
      left: 0;
      right: 0;
      flex-direction: column;
      background: var(--bg-secondary);
      border-bottom: 1px solid var(--border);
      padding: var(--space-lg);
      gap: var(--space-md);
    }

    .nav-links.open {
      display: flex;
    }

    .mobile-toggle {
      display: flex;
    }

    .lang-switch {
      margin-left: 0;
      align-self: flex-start;
    }
  }
</style>

<script>
  const toggle = document.getElementById('mobile-toggle');
  const links = document.querySelector('.nav-links');
  toggle?.addEventListener('click', () => {
    links?.classList.toggle('open');
  });
</script>
